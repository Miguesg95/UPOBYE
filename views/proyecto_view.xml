<odoo>
  <record id="proyecto_form_view" model="ir.ui.view">
    <field name="name">upobye.proyecto.form</field>
    <field name="descripcion">upobye-.proyecto</field>
      <form string="Proyectos">
        <sheet layout="auto">
          <group>
            <field name="nombre_proyecto" />
            <field name="descripcion_proyecto" />
            <field name="sectores"/>
            <field name="proyecto" widget="many2many" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="proyecto_tree_view" model="ir.ui.view">
    <field name="name">upobye.proyecto.tree</field>
    <field name="model">upobye-.proyecto</field>
      <tree string="Proyectos">
        <field name="nombre_proyecto" />
        <field name="descripcion_proyecto" />
        <field name="sectores"/>
        <field name="proyecto" widget="many2many" />
      </tree>
    </field>
  </record>

  <record id="act_nuevo_proyecto" model="ir.actions.act_window">
			<field name="name">Nuevo proyecto</field>
			<field name="res_model">upobye.proyecto</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

</odoo>