<odoo>
  <record id="TipoContrato_form_view" model="ir.ui.view">
    <field name="name">upobye.tipo_contrato.form</field>
    <field name="model">upobye.tipo_contrato</field>
    <field name="arch" type="xml">
      <form string="TipoContrato">
        <sheet layout="auto">
          <group>
            <field name="name" />
            <field name="tipo" />
            <field name="description" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="TipoContrato_tree_view" model="ir.ui.view">
    <field name="name">upobye.tipo_contrato.tree</field>
    <field name="model">upobye.tipo_contrato</field>
    <field name="arch" type="xml">
      <tree string="TipoContrato">
        <field name="name" />
        <field name="tipo" />
        <field name="description" />
      </tree>
    </field>
  </record>

   <record id="TipoContrato_list_action" model="ir.actions.act_window">
      <field name="name">TipoContrato</field>
      <field name="res_model">upobye.tipo_contrato</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
         <p class="o_view_nocontent_smiling_face">Create the first class</p>
      </field>
   </record> 
</odoo>
