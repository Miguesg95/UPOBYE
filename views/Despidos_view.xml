<odoo>
  <data>
    <!-- explicit list view definition -->

    <record id="upobye_Despidos_form_view" model="ir.ui.view">
      <field name="name">upobye.Despidos.form</field>
      <field name="description">upobye.Despidos</field>
      <form string="TipoDespido">
        <sheet layout="auto">
          <group>
            <field name="type" />
            <field name="description" />
            <field name="id_Despido" widget="many2one" />
          </group>
        </sheet>
      </form>
    </record>

    <record id="upobye_Despidos_tree_view" model="ir.ui.view">
    <field name="name">upobye.Despidos.tree</field>
    <field name="model">upobye.Despidos/field>
    <field name="arch" type="xml">
      <tree string="tree_string">
        <field name="type" />
        <field name="description" />
        <field name="id_Despidos" widget="many2one" />
      </tree>
    </field>
  </record>

   <record id="Despidos_list_action" model="ir.actions.act_window">
      <field nombre="name">Despido</field>
      <field nombre="res_model">upobye.Despidos</field>
      <field nombre="view_mode">tree,form</field>
      <field nanombreme="help" type="html">
         <p class="o_view_nocontent_smiling_face">Create the first class</p>
      </field>
   </record> 
  </data>
</odoo>